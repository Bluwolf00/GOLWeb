<!doctype html>
<html lang="en" data-bs-theme="dark">

<head>
    <%- include('../partials/head', {pageTitle: "Login"}) %>
    <script defer src="/scripts/login.js"></script>

    <style>
        #loginSection {
            margin: 5% auto;
            width: 50%;
            padding: 20px;
            border: 1px solid var(--blu-secondary);
            border-radius: 10px;
        }

        #loginSection h1 {
            margin-bottom: 20px;
        }

        #loginSection button {
            margin-top: 20px;
        }

        .form-control {
            text-align: center;
        }
    </style>
</head>

<%- include('../partials/headernav', {pageTitle: "Log In", loggedin: loggedin, username: username}) %>


<body>

    <div class="spinner-wrapper">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>

    <main id="mainContent">
        <div class="container border-bottom text-center">

            <div class="px-4" id="front-hero">
                <img id="front-logo" class="d-block mx-auto mb-4" src="/img/logo_new.webp" alt="">
                <h1 class=" text-body-emphasis ">Guerrillas of Liberation</h1>

            </div>

            <section id="loginSection">
                <h1>Log In</h1>

                <form action="" method="POST" id="loginForm">
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" class="form-control" id="username" name="username" autocomplete="username" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password" autocomplete="current-password" required>
                    </div>
                    <button type="submit" class="btn btn-primary" id="loginButton">Log In</button>
                </form>

                <div class="row">
                    <h3>3rd Party Login</h3>
                    <a href="/auth/discord" class="btn btn-secondary"><i class="bi bi-discord"></i> Log In with Discord</a>
                </div>
            </section>


        </div>

        <script src="/scripts/loader.js"></script>
    </main>

    <footer>
        <%- include('../partials/footer') %>
    </footer>
</body>

</html>