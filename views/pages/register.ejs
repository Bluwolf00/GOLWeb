<!doctype html>
<html lang="en" data-bs-theme="dark">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>GOL Log In</title>
    <link rel="icon" type="image/png" href="/img/logo.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/theme.css">
    <script src="/scripts/logoHover.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <style>
        .registerSection {
            margin: 5% auto;
            width: 50%;
            padding: 20px;
            border: 1px solid var(--blu-secondary);
            border-radius: 10px;
        }

        .registerSection h1 {
            margin-bottom: 20px;
        }

        .registerSection button {
            margin-top: 20px;
        }

        .form-control {
            text-align: center;
        }
    </style>
</head>

<%- include('../partials/headernav', {pageTitle: "Register"}) %>


<body>

    <div class="spinner-wrapper">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>

    <main>
        <div class="container border-bottom text-center">

            <div class="px-4" id="front-hero">
                <img id="front-logo" class="d-block mx-auto mb-4" src="img/logo_new.png" alt="">
                <h1 class="fw-bold text-body-emphasis mainHead">Guerrillas of Liberation</h1>

            </div>

            <section class="registerSection">
                <h1>Register</h1>

                <form action="/data/performRegister" method="POST">
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" class="form-control" id="username" name="username" autocomplete="username" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password" autocomplete="current-password" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Register</button>
                </form>
            </section>


        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous">
        </script>
        <script src="/scripts/loader.js"></script>
    </main>

    <footer>
        <%- include('../partials/footer') %>
    </footer>
</body>

</html>